DESCRIPTION="groovy little assembler"

HOMEPAGE="http://www.nasm.us/ http://nasm.sourceforge.net/"

LICENSE="LGPL-2.1"

# dependencies:
#   perl (msys)

SRC_URI="http://www.nasm.us/pub/${PN}/releasebuilds/${PV}/${P}.tar.xz"

src_prepare()
{
	epatch "${P}-mingwrt.patch"
	eautoreconf	
}

src_configure()
{
	econf
}

src_compile()
{
	emake -j1
}

src_install()
{
	emake_install INSTALLROOT="${INSTDIR}"
}
