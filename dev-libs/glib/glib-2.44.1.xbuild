DESCRIPTION="The GLib library of C routines"

HOMEPAGE="http://ftp.gnome.org/pub/GNOME/sources/glib/"

LICENSE="LGPL-2"

RDEPEND="sys-devel/gettext
		sys-libs/zlib
		>=dev-libs/libffi-3.0.0
		dev-lang/python"
DEPEND="dev-util/pkg-config
		sys-devel/libiconv
		dev-libs/libpcre"

SRC_URI="http://ftp.gnome.org/pub/GNOME/sources/${PN}/2.44/${P}.tar.xz"

src_prepare()
{
	epatch "${P}-mingw.patch"
	AT_M4DIR="m4macros" eautoreconf
}

src_configure()
{
	econf --disable-debug --enable-shared \
		--with-threads=win32 --with-pcre=system \
		--disable-libelf --disable-gtk-doc
}

src_install()
{
	emake_install
	# to resolve collision with sys-devel/libiconv
	rm -f "${INSTDIR}${PREFIX}/lib/charset.alias"
}
